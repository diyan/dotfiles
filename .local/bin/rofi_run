#!/usr/bin/env bash

if [ "$(hostname)" == "falcon" ]; then
    rofi -show run -no-disable-history -font 'Droid Sans Mono 20' -lines 7 -width 600 -bw 4 -bc #4c7899 -opacity 95%
else
    rofi -show run -no-disable-history -font 'Droid Sans Mono 15' -lines 7 -width 600 -bw 2 -bc #4c7899 -opacity 95%
fi
